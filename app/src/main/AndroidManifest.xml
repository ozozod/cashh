<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-feature android:name="android.hardware.nfc" android:required="false" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:label="VayVene"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:theme="@style/Theme.Material3.DayNight.NoActionBar">

        <!-- Launcher -->
        <activity
            android:name=".ui.login.NfcLoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Admin -->
        <activity android:name=".ui.admin.AdminMenuActivity" android:exported="false" />
        <activity android:name=".ui.admin.RegisterCardActivity" android:exported="false" />
        <activity android:name=".ui.admin.RegisterResultActivity" android:exported="false" />

        <!-- Vendedor / Caja -->
        <activity android:name=".ui.main.SellerMenuActivity" android:exported="false" />
        <activity android:name=".ui.main.SellerSummaryActivity" android:exported="false" />
        <activity android:name=".ui.main.CancelSaleActivity" android:exported="false" />
        <activity android:name=".ui.main.PosActivity" android:exported="false" />
        <activity android:name=".ui.main.BalanceActivity" android:exported="false" />
        <activity android:name=".ui.main.RoleMenuActivity" android:exported="false" />
        <activity android:name=".ui.main.MainActivity" android:exported="false" />
        <activity android:name=".ui.admin.AdminOpsDevActivity" android:exported="false" />
        <activity android:name=".ui.nfc.NfcCaptureActivity" android:exported="false" />
        <activity android:name=".ui.admin.AdminCardsMenuActivity" android:exported="false" />
        <activity android:name=".ui.admin.AdminCashierMenuActivity" android:exported="false" />
        <activity android:name=".ui.admin.AdminSellerMenuActivity" android:exported="false" />
        <activity android:name=".ui.admin.AdminStaffRegisterActivity" android:exported="false" />
        <activity android:name=".ui.admin.AdminCustomerRegisterActivity" android:exported="false" />

        <!-- NFC Scan (si lo usÃ¡s en otros flujos) -->
        <activity
            android:name=".ui.nfc.NfcScanActivity"
            android:exported="false"
            android:launchMode="singleTop" />

        <activity
            android:name=".ui.cashier.CashierQuickOpsActivity"
            android:exported="false" />

    </application>
</manifest>
